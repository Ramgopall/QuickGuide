<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:id="@+id/llReferMain"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <ImageView
        android:id="@+id/ivReferBack"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/ic_arrow_back_grey_24dp"
        android:padding="@dimen/_9sdp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <ImageView
        android:src="@drawable/ic_refer_wallet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <TextView
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:id="@+id/tvReferCode"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"/>

    <TextView
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:id="@+id/tvReferText"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8">
        <TextView
            android:visibility="gone"
            android:id="@+id/tvReferShare"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/refer_button"
            android:drawableEnd="@drawable/ic_share_black_24dp"
            />
    </RelativeLayout>

</LinearLayout>