<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp">

    <ImageView
        android:id="@+id/ivRvMyWalletArrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_up_arrow" />

    <TextView
        android:id="@+id/tvRvMyWalletPrice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Rs. 300"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tvRvMyWalletPriceSymbol"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_38sdp"
        android:layout_toStartOf="@+id/tvRvMyWalletPrice"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_18sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvRvMyWalletPriceSymbol"
        android:layout_toEndOf="@+id/ivRvMyWalletArrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRvMyWalletReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="start"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvRvMyWalletDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Jan 01,2019"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

